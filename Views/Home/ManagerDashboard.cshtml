@{
    ViewData["Title"] = "Manager Dashboard";
}
<h2>Manager Dashboard</h2>
<div class="alert alert-info">Approve or reject claims.</div>
<table class="table">
    <thead>
        <tr>
            <th>Lecturer</th>
            <th>Month</th>
            <th>Hours</th>
            <th>Total</th>
            <th>Coordinator Review</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Brandon Dlamini</td>
            <td>September 2025</td>
            <td>40</td>
            <td>R5000</td>
            <td>Reviewed</td>
            <td>Pending</td>
            <td>
                <button class="btn btn-success btn-sm">Approve</button>
                <button class="btn btn-danger btn-sm">Reject</button>
                <button class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#documentModal">View Documents</button>
            </td>
        </tr>
    </tbody>
</table>
<!-- Modal for Document Preview -->
<div class="modal fade" id="documentModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Document Preview</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Placeholder: timesheet.pdf (Type: Timesheet)</p>
            </div>
        </div>
    </div>
</div>